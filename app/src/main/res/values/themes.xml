<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="Theme.ClinicEase" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary branding colors -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:colorBackground">@color/backgroundColor</item>

        <!-- Customize your theme here -->
        <item name="android:statusBarColor">@color/primaryColorDark</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
    </style>

    <!-- Dark theme variant -->
    <style name="Theme.ClinicEase.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary branding colors -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:colorBackground">@color/backgroundColor</item>

        <!-- Customize your theme here -->
        <item name="android:statusBarColor">@color/primaryColorDark</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
    </style>

</resources>
